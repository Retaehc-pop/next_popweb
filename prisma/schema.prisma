// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Category {
  id      Int                   @id @default(autoincrement())
  name    String                @unique
  project CategoriesOnProject[]
}

model Language {
  id      Int                 @id @default(autoincrement())
  name    String              @unique
  project LanguageOnProject[]
}

model Project {
  id          Int                   @id @default(autoincrement())
  name        String?               @unique
  description String?
  published   Boolean?
  images      Image[]
  github      String?
  language    LanguageOnProject[]
  categories  CategoriesOnProject[]
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
}

model LanguageOnProject {
  project      Project  @relation(fields: [projectId], references: [id])
  projectId    Int
  language     Language @relation(fields: [languageName], references: [name])
  languageName String // relation scalar field (used in the `@relation` attribute above)
  assignedAt   DateTime @default(now())

  @@id([projectId, languageName])
}

model CategoriesOnProject {
  project      Project  @relation(fields: [projectId], references: [id])
  projectId    Int
  category     Category @relation(fields: [categoryName], references: [name])
  categoryName String // relation scalar field (used in the `@relation` attribute above)
  assignedAt   DateTime @default(now())

  @@id([projectId, categoryName])
}

model Image {
  id        String  @id @default(cuid())
  publicId  String  @unique
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  format    String
  version   String
}
